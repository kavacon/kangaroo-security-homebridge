{
  "pluginAlias": "KangarooSecurity",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "name",
        "type": "string",
        "required": true,
        "default": "KangarooSecurity"
      },
      "refreshToken": {
        "title": "the refresh token used by your kangaroo account for oauth",
        "type": "string",
        "required": true,
        "default": "xxxxxxxxxx"
      },
      "secureTokenKey": {
        "title": "the key to make secure token requests",
        "type": "string",
        "required": true,
        "default": "xxxxxxxxxx"
      },
      "videoStitchOptions": {
        "type": "object",
        "title": "video stitch options",
        "required": false,
        "properties": {
          "fps": {
            "title": "frames per second",
            "type": "number",
            "required": false
          },
          "runtime": {
            "title": "stitch runtime",
            "type": "number",
            "required": false
          },
          "rotation": {
            "title": "rotation angle degrees",
            "type": "number",
            "required": false
          }
        }
      }
    }
  }
}